<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/colorButton">
            <TextView
                android:id="@+id/textInfoQwests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/qwest15"
                android:textColor="@color/colorButtonText"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:textColor="@color/cardview_dark_background"
        android:textStyle="bold"
        android:text="@string/get_death" />

    <CheckBox
        android:id="@+id/all_live"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="@string/all_live" />

    <CheckBox
        android:id="@+id/hart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="@string/hart"  />

    <CheckBox
        android:id="@+id/Insult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="@string/Insult" />

    <CheckBox
        android:id="@+id/RAK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="@string/RAK" />

    <CheckBox
        android:id="@+id/srachka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="@string/srachka" />

    <CheckBox
        android:id="@+id/soogar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="@string/soogar" />

    <Button
        android:id="@+id/Qw15"
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_gravity="center_vertical|center_horizontal|center"
        android:gravity="center_horizontal|center_vertical|center"
        android:background="@color/colorButton"
        android:textColor="@color/colorButtonText"
        android:text="@string/next" />

</LinearLayout>